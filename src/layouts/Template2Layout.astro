---
import '../styles/output.css';
import { marked } from 'marked';

const {
    headline,
    imageUrl,
    refsImage,
    scientificRefs,
    linksRodape,
    footerText
} = Astro.props;

const links = linksRodape

const footerContent = marked(footerText)
---

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8" />
    <title>{headline}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
</head>

<body>

    <main class="flex-1">
        <div class="top-band bg-[#d9877c] h-[5px]"></div>

        <section class="p-0 section-1">
            <div class="max-w-5xl mx-auto text-center flex flex-col justify-center items-center">
                <h1 class="text-[27px] font-bold pt-4">{headline}</h1>
                <div class="text-center">
                    <img src={imageUrl} alt="Main Visual" />
                </div>
            </div>
        </section>

        <section class="max-w-5xl mx-auto flex flex-col justify-center items-center">
            <div class="text-center mt-16">
                <p class="text-md font-medium mb-10 text-[#8d8d8d] mt-0">Scientific References</p>
                <img src={refsImage} alt="References" />
            </div>

            <div class="mt-8">
                <ul class="list-disc grid grid-cols-2 gap-3 space-x-4 text-xs text-gray-400 ">
                    {scientificRefs?.map(ref => <li>{ref.title}</li>)}
                </ul>
            </div>
        </section>

        <footer class="text-center mt-16 py-8 text-sm bg-black text-gray-100">
            <div class="max-w-5xl mx-auto space-y-4">
                <ul class="flex flex-wrap justify-center gap-2">
                    {links?.map((link, i) => (
                        <a href={link.urlLink}>
                            {link.textLink} {i < links.length - 1 && '|' }
                        </a>
                        ))} 
                </ul> 
                <div class="mt-4 space-y-4" set:html={footerContent}></div>
            </div>
        </footer>
    </main>
</body>

</html>

<style>
    @import url(https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap);
    @import url(https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap);
    @import url(https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap);
    @import url(https://fonts.googleapis.com/css2?family=Inter&display=swap);

    body {
        font-family: 'Inter', sans-serif;
    }

    .section-1 {
        background-image: url(https://glucosecontrolguide.com/fb/sgs/vsl3/prn-ca1/h1l1//images/light-background-fade.jpg);
        background-size: cover;
        background-repeat: no-repeat;
        background-position: top;

    }
</style>