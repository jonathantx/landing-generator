---
import '../styles/output.css'
import { marked } from 'marked';
const { title, videoUrl, buttonContent, description, footerText, footerLinks } = Astro.props;
const htmlDescription = marked(description);
const htmlFooter = marked(footerText);
---

<html lang="pt-br">

<head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

</head>

<body class="bg-white">

    <main class="flex-1">
        <div class="max-w-3xl mx-auto px-4 py-8 text-center">
    
            <small class="text-sm mb-1">Advertisement</small>
    
            <h1 class="text-4xl md:text-5xl font-bold mb-6">{title}</h1>
    
            <a href="#" class="mb-6 border border-gray-300 rounded-md overflow-hidden">
                <img src={videoUrl} alt="" class="size-full mb-6">
            </a>
    
            <button class="inline-block bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-md mb-8 cursor-pointer">{buttonContent}</button>
    
            <div class="text-left mb-8 space-y-4" set:html={htmlDescription}></div>
    
            <button class="inline-block bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-6 rounded-md mb-8 cursor-pointer">{buttonContent}</button>
    
        </div>
    
        <div class="bg-gray-100 py-8">
            <div class="max-w-3xl mx-auto px-4 text-center text-sm opacity-80 space-y-4" set:html={htmlFooter}>
            </div>
        </div>

    </main>

    <footer class="border-t border-gray-200 py-4">
        <div class="max-w-3xl mx-auto px-4">
            <div class="flex flex-wrap justify-center items-center gap-4"> 
                {footerLinks.map(link => (
                    <a href={link.url} class="text-gray-600 hover:text-gray-900" >
                        {link.text}
                    </a>
                ))}
             </div>
        </div>
    </footer>
    

</body>

</html>

<style>

    @import url(https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap); 
    @import url(https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap); 
    @import url(https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap);
    @import url(https://fonts.googleapis.com/css2?family=Inter&display=swap); 
     
   body {
    font-family: 'Inter', sans-serif;
   }

</style>